{
  "name": "quick-voice-note",
  "displayName": "Quick Voice Note",
  "publisher": "ninglo",
  "description": "Start taking voice notes with one shortcut (cmd (ctrl) + shift + v) !",
  "icon": "logo.jpeg",
  "version": "0.0.6",
  "license": "MIT",
  "engines": {
    "vscode": "^1.91.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ninglo/quick-voice-note"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "ms-vscode.vscode-speech"
  ],
  "contributes": {
    "commands": [
      {
        "command": "quick-voice-note.takeNote",
        "title": "Take a Note",
        "category": "Quick Voice Note"
      },
      {
        "command": "quick-voice-note.openNote",
        "title": "Open Created Notes",
        "category": "Quick Voice Note"
      }
    ],
    "keybindings": [
      {
        "command": "quick-voice-note.takeNote",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v"
      }
    ],
    "configuration": {
      "title": "Quick Voice Note",
      "properties": {
        "quick-voice-note.noteFolder": {
          "type": "string",
          "default": "",
          "description": "The folder where notes will be stored."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}